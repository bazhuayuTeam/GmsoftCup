package com.cqut.util.constant;

/**
 * 任务常量，包括任务分解限制和任务状态。
 * 
 * @author Cheng
 * 
 */
public final class TaskConst {

	private TaskConst() {
	}

	/**
	 * 任务可分解
	 */
	public static final int DECOMPOSABLE = 1;

	/**
	 * 任务不可分解
	 */
	public static final int UNDECOMPOSABLE = 0;

	/**
	 * 任务保存状态
	 */
	public static final int TASK_SAVE = 0;

	/**
	 * 任务执行状态
	 */
	public static final int TASK_EXECUTE = 1;

	/**
	 * 任务终止状态
	 */
	public static final int TASK_TERMINATED = 2;

	/**
	 * 任务完成状态
	 */
	public static final int TASK_COMPLETED = 3;

	/**
	 * 任务提交方式，预提交（需要审核）
	 */
	public static final String TASK_PRESUBMIT = "需要审核";

	/**
	 * 任务提交方式，直接提交（不需要审核）
	 */
	public static final String TASK_SUBMIT = "直接提交";
}
