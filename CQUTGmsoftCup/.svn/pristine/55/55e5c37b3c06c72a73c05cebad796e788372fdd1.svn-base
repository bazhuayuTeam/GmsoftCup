/*条件表格里的样式开始*/

.show{
	width:97%;
	height:550px;
	display: none;
	background-color: #ffffff;
	margin-left:18px;
	z-index:10;
	border: 1px solid #afafaf;
	position: relative;
}

.conditionTitle,.outerTableDiv{
	left:15px;
}
.conditionTitle {
	position: absolute;
	top: 0px;
	height: 50px;
}
.conditionTitle span,.conditionTitle button{
	position: relative;
}
.conditionTitle span{
	font-size: 18px;
	color: #75614d;
	top:11px;
}
.conditionTitle button{
	width: 125px;
	height: 33px;
	background-color: #2e2e2e;
	color: #ffffff;
	font-size: 16px;
	top:10px;
	margin-left: 15px;
	cursor: pointer;
}

.outerTableDiv {
	position:absolute!important;
	position:relative;
	top:50px!important;
	top:0;
	bottom:26px;
	width:99%;
	overflow:hidden;
	height:auto!important;
	height:100%;
	max-height:500px;
	left:0px;
}

.innerTableDiv {
	height:98%;
 	overflow-y:auto;
 	z-index: 20;
}

.innerTableDiv table td {
	text-align: left;
	padding-left: 10px;
	min-width: 180px;
}

.innerTableDiv table td label{
	cursor: pointer;
}

.condtionDivFooter{
	position: absolute;
	bottom: 0;
	height: 26px;
	width: 100%;
}

/*条件表格样式 结束*/

