body,li{
	margin: 0;
	padding: 0
}
ul{
	margin: 2px 0 0;
	text-align:left;
	padding:0;
}
a{
	padding:0;
	marging:0;
	outline: none;
	color:rgb(0,71,121);
	line-height:18px;
	height:20px;
	text-decoration:none;
}
.list-content-div{
	position:absolute;
	line-height:18px;
	height:18px;
	left:20px;
	right:0;
	width:auto;
	padding:0;
	border:1px solid #fff;
	border-bottom: 1px dotted #9ED4FD;
}
ul li {
	height:20px;
	line-height:20px;
	position:relative;
	background-color:green;
	list-style-type:none;
	padding: 0 0 0 20px;
	margin:0;
	background:url('../../../images/module/person/news_list_item.gif') no-repeat left center;
}

ul li a {
	display: block;
	padding:0;
	margin:0;
	font-size: 13px;
	width: 60%;
	text-decoration: none;
	color: black;
	white-space: nowrap;
	text-overflow: ellipsis;
	-o-text-overflow: ellipsis;
	overflow: hidden;
	position: absolute;
	top: 0px;
}
ul li a:HOVER {
	text-decoration: underline;
	color: blue;
}
ul li span{
	position:relative;
	float:right;
	font-size: 12px;
}