@CHARSET "UTF-8";

/*返回顶部*/
p.return_top{
	margin-bottom:25px;
	
	}
	#back-to-top{
		position:fixed;
		bottom:90px;
		right:120px;
	}
	#back-to-top a{
		text-align:center;
		text-decoration:none;
		color:#3a3b3b;
		display:block;
		width:40px;
		font-size:14px;
		/*使用CSS3中的transition属性给跳转链接中的文字添加渐变效果*/
		-moz-transition:color 1s; 
		-webkit-transition:color 1s;
		-o-transition:color 1s;
		line-height:18px;
	}
	#back-to-top a:hover{
		color:#979797;
	}
	#back-to-top a span.span_style{
		background:#d1d1d1;
		border-radius:6px;
		display:block;
		height:40px;
		width:40px;
		background:#d1d1d1 url(../../images/comment/arrow-up2.png) no-repeat center center;
		margin-bottom:5px;
		-moz-transition:background 1s;
		-webkit-transition:background 1s;
		-o-transition:background 1s;
	}
	#back-to-top a:hover span.span_style{
		background:#979797 url(../../images/comment/arrow-up2.png) no-repeat center center;
	}