*{
	border: 0px;
}

html,body{
	height: 100%;
	overflow: hidden;
}

/*侧边栏开始*/
.sidebarDiv{
	height: 100%;
	width: 182px;
	background-color: #2e2e2e;
	/*margin-right: -100%;*/
	float: left;
	
	/*禁止选择文字*/
	-webkit-user-select: none; /* Chrome all / Safari all */
	-moz-user-select: none; /* Firefox all */
	-ms-user-select: none; /* IE 10+ No support for these yet, use at own risk */
	-o-user-select: none;
	user-select: none; 
	cursor:default;
	
	/*防止被撑大
	table-layout: fixed;
	word-wrap: break-word;
	overflow: hidden;*/
}

.header {
	position: absolute;
	top:0px;
	width: 182px;
}

/*标题开始*/
.title {
	height: 66px;
	background-color: #8ab939;
	color:#ffffff;
	font-size: 24px;
	line-height: 66px;
	text-align: center;
	cursor: pointer;
}
.title span{
	font-size: 40px;
}
/*标题结束*/

/*操作开始*/
.operationsDiv {
	height: 202px;
	border-bottom: 1px solid #3e3e3e;
}

/*头像开始*/
.headPicDiv {
	height: 121px;
}

.headPicCircle,.headPic {
	position: absolute;
	left: 43px;
	top:99px;
	width: 90px;
	height: 90px;
}
.headPicCircle {
	z-index: 10;
	cursor: pointer;
}
.headPic {
}
/*头像结束*/

.userName {
	text-align: center;
	font-size: 18px;
	color: #979797;
	height: 35px;
	line-height: 45px;
}

.operationDIv {
	font-size: 12px;
	color: #ffffff;
	text-align: center;
	position: relative;
	top: 7px;
}

.operationDIv  a{
	cursor: pointer;
}
.operationDIv  a:hover{
	color: #ffffff;
}
/*操作结束*/

/*菜单开始*/
.outerMenuDiv {
	/*overflow: hidden;
	margin-top: 268px;
	height: 100%;
	table-layout: fixed;
	word-wrap: break-word;*/
	 position:absolute!important;
	 position:relative;
	 top:268px!important;
	 top:0;
	 bottom:52px;
	 width:182px;
	 overflow:hidden;
	 height:auto!important;
	 height:100%;
}

.innerMenuDiv {
	height:100%;
 	overflow-y:auto;
}

/*菜单选项开始*/
.menuItemDiv ,.secondLevelMenuItemDiv{
	height: 55px;
	line-height: 55px;
	color:#ffffff;
	cursor: pointer;
	position: relative;
	
	/*超出显示省略号*/
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: nowrap; 
}
.menuItemDiv {
	border-bottom: 1px solid #3e3e3e;
}
.menuItemDiv:hover{
	background-color: #979797;	
}

.menuItemDiv span{
	font-size: 16px;
	position: relative;
	left: 57px;
}
.menuIconImg {
	position: absolute;
	top:20px;
	left: 20px;
}
.menuPitchOnIconImg {
	float:right;
	position: relative;
	top:-34px;
	visibility: hidden;
}
/*菜单选项开始*/

/*二级菜单开始*/
.secondLevelMenuBgDiv {
	height:100%;
/*	width:182px;*/
	position: absolute;
	top: 0px;
	left:182px;
	background:url("../../../images/manager/secondMenuBg.png") ;
}

.outerSecondLevelMenuDiv {
	 position:absolute!important;
	 position:relative;
	 top:268px!important;
	 top:0;
	 bottom : 10px;
	 width:182px;
	 overflow:hidden;
	 height:auto!important;
	 height:100%;
}

.secondLevelMenuDiv {
	height: 100%;
	overflow-y:auto;
}

.secondLevelMenuItemDiv,.topDiv{
	border-bottom: 1px solid #a8a8a8;
}

.secondLevelMenuItemDiv span {
	position: relative;
	left : 25px;
}
.topDiv {
	position: absolute;
	top :0;
	height: 268px;
	width:182px;
}

.bottomDiv {
	position: absolute;
	bottom: 0;
	height: 10px;
	width: 182px;
}
/*二级菜单结束*/

/*菜单结束*/

/*底部版权开始*/
.footer {
	font-size: 12px;
	color: #797979;
	text-align: center;
	position: absolute;
	bottom: 0;
	height: 52px;
	line-height: 52px;
	width: 182px;
}
/*底部版权结束*/
/*侧边栏结束*/


/*iframe开始*/
.iframeDiv{
	height: 100%;
	/*float: left;	
	width: 100%;
	*/
	margin-left: 182px;
	overflow: hidden;
}

.iframe {
	height: 100%;
	width: 100%;
/*	margin-left: 182px;*/

	min-width: 1024px;
}
/*iframe结束*/








