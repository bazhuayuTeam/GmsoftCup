body,li{
	margin: 0;
	padding: 0
}
ul{
	margin: 2px 0 0;
}
a{
	outline: none;
}
ul li {
	width: 95%;
	height:20px;
	line-height:20px;
	position: relative;
	border-bottom: 1px dotted #9ED4FD;
	list-style-image:url("../../../images/module/person/message_list_item.gif");
	padding: 0;
}

ul li a {
	display: block;
	padding:0;
	margin:0;
	font-size: 13px;
	width: 60%;
	text-decoration: none;
	color: black;
	white-space: nowrap;
	text-overflow: ellipsis;
	-o-text-overflow: ellipsis;
	overflow: hidden;
	position: absolute;
	top: 0px;
}
ul li a:HOVER {
	text-decoration: underline;
	color: blue;
}
ul li span{
	position: absolute;
	top: 1px;
	right: 2px;
	font-size: 13px;
}